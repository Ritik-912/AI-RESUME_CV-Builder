\documentclass[11pt]{article}
\usepackage[a4paper,margin=0.45in]{geometry}
\usepackage[T1]{fontenc}
\usepackage[utf8]{inputenc}
\usepackage{lmodern}
\renewcommand{\familydefault}{\sfdefault}
\usepackage{enumitem}
\usepackage{hyperref}
\usepackage{fontawesome}
\usepackage{setspace}
\usepackage{xcolor}

\definecolor{headerblue}{HTML}{0A4F7A}
\definecolor{graytext}{gray}{0.3}

\hypersetup{
    colorlinks=true,
    linkcolor=headerblue,
    urlcolor=headerblue
}

\setlength{\parindent}{0pt}
\setlength{\parskip}{1pt}
\setlist[itemize]{leftmargin=*, topsep=0pt, itemsep=1pt, parsep=0pt}

\usepackage{titlesec}
\titleformat{\section}{
  \color{headerblue}\scshape\large
}{}{0em}{}[\titlerule]

\begin{document}
\pagestyle{empty}

%========================
% HEADER
%========================
\begin{center}
    {\LARGE \textbf{ {{ personalInfo.name | latex_escape }} }} \\[4pt]
    \small
    \faEnvelope \hspace{1pt} \href{mailto:{{ personalInfo.email | latex_escape }} } {{ personalInfo.email | latex_escape }} \quad
    \faMapMarker \hspace{1pt} {{ personalInfo.location | latex_escape }} \quad
    {% if personalInfo.links %}
    {% for link in personalInfo.links if link %}
        \href{ {{ link.url | latex_escape }} }{ {{ link.text | latex_escape }} } \quad
    {% endfor %}
    {% endif %}
\end{center}

%========================
% SUMMARY
%========================
{% if personalInfo.summary %}
\vspace{-4pt}
\hrule
\vspace{6pt}
\section*{Professional Summary}
{% if personalInfo.targetTitle %}
\textbf{ {{ personalInfo.targetTitle | latex_escape }} }\hspace{6pt}
{% endif %}
\small
{{ personalInfo.summary | latex_escape }}
\normalsize
{% endif %}

%========================
% TECHNICAL SKILLS
%========================
{% if skills %}
\section*{Skills}
\begin{itemize}
    {% for skill in skills %}
    \item \textbf{ {{ skill.name | latex_escape }} }: {{ skill.level | latex_escape }}
    {% endfor %}
\end{itemize}
{% endif %}

%========================
% WORK EXPERIENCE
%========================
{% if workExperiences %}
\section*{Professional Experience}
{% for job in workExperiences %}
\textbf{ {{ job.position | latex_escape }} } \hfill \textit{ {{ job.startDate }} -- {{ job.endDate or 'Present' }} }\\
\textit{ {{ job.organization | latex_escape }} }
{% if job.description %}
\begin{itemize}
    \item {{ job.description | latex_escape }}
\end{itemize}
{% endif %}
\vspace{2pt}
{% endfor %}
{% endif %}

%========================
% EDUCATION
%========================
{% if educations %}
\section*{Education}
{% for edu in educations %}
\textbf{ {{ edu.courseName | latex_escape }} } \hfill \textit{ {{ edu.startDate }} -- {{ edu.endDate or 'Present' }} }\\
{{ edu.instituteName | latex_escape }} \hfill {{ edu.grade | latex_escape }}\\
{% if edu.description %}\small {{ edu.description | latex_escape }} \normalsize{% endif %}
\vspace{2pt}
{% endfor %}
{% endif %}

%========================
% PROJECTS
%========================
{% if projects %}
\section*{Projects}
\begin{itemize}
    {% for project in projects %}
    \item \textbf{ {{ project.title | latex_escape }} } {% if project.organisation %}({{ project.organisation | latex_escape }}){% endif %} \hfill \textit{ {{ project.startDate or '' }} -- {{ project.endDate or 'Present' }} }
    {% if project.link %}\\ \href{ {{ project.link | latex_escape }} }{link}{% endif %}
    {% if project.description %}\newline
    {{ project.description | latex_escape }}
    {% endif %}
    {% endfor %}
\end{itemize}
{% endif %}

%========================
% CERTIFICATIONS
%========================
{% if certifications %}
\section*{Certifications}
\begin{itemize}
    {% for cert in certifications %}
    \item \textbf{ {{ cert.title | latex_escape }} } \hfill {{ cert.issuingAuthority | latex_escape }}, {{ cert.issueDate }}
    {% endfor %}
\end{itemize}
{% endif %}

%========================
% AWARDS
%========================
{% if awards %}
\section*{Awards}
\begin{itemize}
    {% for award in awards %}
    \item \textbf{ {{ award.title | latex_escape }} } \hfill {{ award.organization | latex_escape }}, {{ award.dateEarned }}
    {% endfor %}
\end{itemize}
{% endif %}

%========================
% LANGUAGES
%========================
{% if languages %}
\section*{Languages}
\begin{itemize}
    {% for lang in languages %}
    \item {{ lang.name | latex_escape }} --- {{ lang.level }}
    {% endfor %}
\end{itemize}
{% endif %}

%========================
% VOLUNTEERING
%========================
{% if volunteering %}
\section*{Volunteering}
{% for vol in volunteering %}
\textbf{ {{ vol.role | latex_escape }} } \hfill \textit{ {{ vol.startDate }} -- {{ vol.endDate or 'Present' }} }\\
{{ vol.organization | latex_escape }}, {{ vol.location | latex_escape }}\\
{% if vol.description %}\small {{ vol.description | latex_escape }} \normalsize{% endif %}
\vspace{2pt}
{% endfor %}
{% endif %}

%========================
% PUBLICATIONS
%========================
{% if publications %}
\section*{Publications}
\begin{itemize}
    {% for pub in publications %}
    \item \textbf{ {{ pub.title | latex_escape }} }, {{ pub.publisher | latex_escape }} ({{ pub.publishedDate }})
    {% if pub.abstract %}\\ {{ pub.abstract | latex_escape }}{% endif %}
    {% if pub.link %}\\ \href{ {{ pub.link | latex_escape }} }{link}{% endif %}
    {% endfor %}
\end{itemize}
{% endif %}

\vfill
{\footnotesize \textcolor{graytext}{Last updated: \today}}

\end{document}
